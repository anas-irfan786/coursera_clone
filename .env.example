# Environment Variables for Coursera Application
# Copy this file to .env and fill in the actual values

# Django Settings
SECRET_KEY=your-very-secret-django-key-here-at-least-50-characters-long
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost

# Database Configuration
DB_NAME=coursera_db
DB_USER=coursera_admin
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# CORS Configuration
CORS_ALLOW_ALL_ORIGINS=False

# Email Configuration (for production)
EMAIL_HOST=smtp.yourmailserver.com
EMAIL_PORT=587
EMAIL_HOST_USER=noreply@yourdomain.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# File Storage (for production)
MEDIA_URL=https://your-cdn.com/media/
MEDIA_ROOT=/var/www/coursera/media/

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Payment Gateway (Stripe)
STRIPE_PUBLISHABLE_KEY=pk_live_...
STRIPE_SECRET_KEY=sk_live_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Redis (for caching and sessions in production)
REDIS_URL=redis://localhost:6379/0